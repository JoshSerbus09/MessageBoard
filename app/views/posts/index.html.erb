<div id="posts_header">
  <h1>All Messages</h1>
</div>

<div id="post_table">
  <table>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Preview</th>
    </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.title %></td>
      <td><%= post.message[0, 12] %>...</td>
      <td><%= link_to 'Read More', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, :method => :delete, :class => 'action', :confirm => 'Are you sure?' %></td>
    </tr>
  <% end %>
  </table>
</div>
<br />
<br />


